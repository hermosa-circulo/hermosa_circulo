LoadModule wsgi_module modules/mod_wsgi.so

WSGIScriptAlias / {{deploy_dir}}/oppai_iga/oppai_iga/wsgi.py
WSGIDaemonProcess oppai_iga user=apache group=apache python-path={{deploy_dir}}/oppai_iga:/usr/lib/python2.7/site-packages
WSGIProcessGroup oppai_iga
WSGISocketPrefix run/wsgi
Alias /static/ {{deploy_dir}}/oppai_iga/static/

<Directory {{deploy_dir}}/oppai_iga/oppai_iga>
    <Files wsgi.py>
        <IfVersion < 2.4>
            Allow from all
        </IfVersion>
        <IfVersion >= 2.4>
            Require all granted
        </IfVersion>
    </Files>
</Directory>

<Directory {{deploy_dir}}/oppai_iga/static>
    <IfVersion < 2.4>
        Allow from all
    </IfVersion>
    <IfVersion >= 2.4>
        Require all granted
    </IfVersion>
</Directory>
